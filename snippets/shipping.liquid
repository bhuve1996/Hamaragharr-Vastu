{% comment %}
  Renders shipping and return information as accordion

  Accepts:
  - show_delivery: {boolean} show/hide delivery text (required)
  - show_return: {boolean} show/hide return text (required)
  - delivery: {richtext} render delivery text (required)
  - return: {richtext} render return text (required)
  Usage:
  {% render 'shipping', show_delivery: show_delivery, show_return: show_return, delivery: delivery, return: return %}
{% endcomment %}

<div class='shipping-accordion'>
  <xo-collapse-provider xo-duration='300'>
    {% if show_delivery %}
      <xo-animate xo-cascade class='shipping-accordion__row'>
        <xo-collapse-trigger class='shipping-accordion__trigger'>
          <div class='shipping-accordion__question'>
            {% render 'icon', name: 'truck', icon_size: '24' %}
            <span>Shipping & Delivery</span>
          </div>
          <div class='shipping-accordion__icon'>
            {%- render 'icon', name: 'plus2', icon_size: '15', color: 'rgba(var(--color-foreground))' -%}
          </div>
        </xo-collapse-trigger>
        <xo-collapse>
          <div class='shipping-accordion__answer'>{{ delivery }}</div>
        </xo-collapse>
      </xo-animate>
    {% endif %}
    {% if show_return %}
      <xo-animate xo-cascade class='shipping-accordion__row'>
        <xo-collapse-trigger class='shipping-accordion__trigger'>
          <div class='shipping-accordion__question'>
            {% render 'icon', name: 'return', icon_size: '22' %}
            <span>Returns & Exchanges</span>
          </div>
          <div class='shipping-accordion__icon'>
            {%- render 'icon', name: 'plus2', icon_size: '15', color: 'rgba(var(--color-foreground))' -%}
          </div>
        </xo-collapse-trigger>
        <xo-collapse>
          <div class='shipping-accordion__answer'>{{ return }}</div>
        </xo-collapse>
      </xo-animate>
    {% endif %}
  </xo-collapse-provider>
</div>
