

<section {% render 'section-attr' %}>
  {% render 'section-bg-image' %}
  <xo-container {% render 'section-layout' %}>
    <xo-grid style='--xs:1; --lg:2; --xo-grid-col-gap: 60px'>
      <div>
        <xo-carousel
          {% if section.settings.auto_play %}
            xo-autoplay='5000'
          {% endif %}
          xo-speed='200'
          xo-gap='30'
          xo-rewind
          xo-render-bullet='<span></span>'
        >
          <xo-carousel-inner>
            <xo-carousel-list role='list' aria-label='{{ 'general.slider.name' | t }}'>
              {% for block in section.blocks %}
                <xo-carousel-slide aria-roledescription='{{ 'sections.slideshow.slide' | t }}' aria-label='{{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}'>
                  <div class='testimonial-v13__item'>
                    <div class='testimonial-v13__icon'>
                      {%- render 'image', image: block.settings.icon_image -%}
                    </div>
                    <div class='testimonial-v13__testimonial'>{{ block.settings.testimonial }}</div>
                    <div class='testimonial-v13__customer'>
                      {% if block.settings.name_customer %}
                        <div class='testimonial-v13__name'>{{ block.settings.name_customer }}</div>
                      {% endif %}
                      {% if block.settings.position %}
                        <div class='testimonial-v13__position'>{{ block.settings.position }}</div>
                      {% endif %}
                    </div>
                  </div>
                </xo-carousel-slide>
              {% endfor %}
            </xo-carousel-list>
          </xo-carousel-inner>
          {% render 'carousel-pagination-style3', class: 'testimonial-v13__pagination' %}
        </xo-carousel>
      </div>
      <div
        {% if section.settings.reverse %}
          style='--order-lg:-1'
        {% endif %}
      >
        {% assign has_manual_images = false %}
        {% for block in section.blocks %}
          {% if block.type == 'instagram_image' and block.settings.image != blank %}
            {% assign has_manual_images = true %}
            {% break %}
          {% endif %}
        {% endfor %}
        
        {% if has_manual_images %}
          <xo-grid
            style='--xs: 2; --md:2; --xl: {{ section.settings.columns_limit }}; --xo-grid-col-gap: {{section.settings.gap}}px ;--xo-grid-row-gap: {{section.settings.gap}}px'
            class='instagram-v2__grid'
          >
            {% for block in section.blocks %}
              {% if block.type == 'instagram_image' and block.settings.image != blank %}
                <div class='instagram-v2__item' {{ block.shopify_attributes }}>
                  {% render 'image', image: block.settings.image, media_aspect_ratio: '1/1' %}
                  <a href='{{ block.settings.link | default: "https://www.instagram.com/" }}' class='instagram-v2__image-layer' style='--color: {{ section.settings.background_color }}' target='_blank'>
                    {{ section.settings.icon_image }}
                  </a>
                </div>
              {% endif %}
            {% endfor %}
          </xo-grid>
        {% else %}
          <xo-instagram
            xo-limit='5'
            xo-open-mode='{{ section.settings.open_mode }}'
            xo-access-token='{{ section.settings.access_token }}'
          >
            <xo-grid
              style='--xs: 2; --md:2; --xl: {{ section.settings.columns_limit }}; --xo-grid-col-gap: {{section.settings.gap}}px ;--xo-grid-row-gap: {{section.settings.gap}}px'
              class='instagram-v2__grid'
            >
              {% if section.settings.access_token == blank %}
                {% for i in (1..section.settings.limit) %}
                  <div class='instagram-v2__item'>
                    {{ 'image' | placeholder_svg_tag: 'instagram-v2__image' }}
                    <a href='https://www.instagram.com/' class='instagram-v2__image-layer' style='--color: {{ section.settings.background_color }}' target='_blank'>
                      {{ section.settings.icon_image }}
                    </a>
                  </div>
                {% endfor %}
              {% else %}
                <xo-instagram-template>
                  <img class='instagram-v2__image' data-src='{ url }' alt='' width='1000' height='1000'>
                  <span class='instagram-v2__image-layer' style='--color: {{ section.settings.background_color }}'>{{ section.settings.icon_image }}</span>
                </xo-instagram-template>
              {% endif %}
            </xo-grid>
          </xo-instagram>
        {% endif %}
      </div>
    </xo-grid>
  </xo-container>
</section>

