

{%- assign reversed = section.settings.reversed -%}

{% comment %} Assign align. Align will get 3 values : start , center or end {% endcomment %}
{%- assign align = section.settings.align | default: 'start' -%}

<section class='banner-v155'
  {% render 'section-attr' %}
>
    {% render 'section-bg-image' %}
    <xo-container
      {% render 'section-layout' %}
    >
      <xo-animate xo-cascade>
        <xo-grid
          style='--xs:1;--md:2;--xo-grid-col-gap:{{ section.settings.gap }}px; --xo-grid-row-gap: {{ section.settings.gap }}px'
        >
          <div
            class='banner-v155__item banner-v155__item--left'
            {% if reversed %}
              style='--order-xs: 1;--order-sm:1;--pl:1.6rem; --plrps:4.8rem'
            {%- else -%}
              style='--pr:1.6rem; --prrps:4.8rem;'
            {% endif %}
          >
            <div
              class='banner-v155__content'
              style='text-align: {{ align }}'
            >
              <xo-animate xo-cascade>
                <h3 class='banner-v155__subtitle'>{{ section.settings.subtitle }}</h3>
              </xo-animate>
              <xo-animate xo-cascade>
                <h2 class='banner-v155__title'>{{ section.settings.title }}</h2>
              </xo-animate>
              <xo-animate xo-cascade>
                <div class='banner-v155__description'>{{ section.settings.description }}</div>
              </xo-animate>
              {% render 'button',
                text: section.settings.button_text,
                link: section.settings.button_link,
                mode: section.settings.button_mode,
                style: section.settings.button_style,
                size: section.settings.button_size,
                radius: section.settings.button_radius,
                padding: section.settings.button_padding
              %}
            </div>
          </div>
          <div class='banner-v155__item banner-v155__item--right'>
            {% if section.settings.image != blank %}
              <div class='{%- render 'hover-style' -%}'>
                <a href='{{ section.settings.button_link }}' class='banner-v155__img'>
                  {%- render 'image', image: section.settings.image -%}
                </a>
              </div>
            {% endif %}
          </div>
        </xo-grid>
      </xo-animate>
    </xo-container>
</section>

