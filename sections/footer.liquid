
{% comment %} Add padding bottom for toolbar mobile {% endcomment %}
{% liquid
  assign placeholder = 'newsletter.email' | t
  assign template = template | split: '.' | first
  if template != 'product'
    assign pb_mobile = '--pb-mobile: 53px'
  else
    assign pb_mobile = ''
  endif
%}

{% comment %} Sticky add cart is hidden when reach here {% endcomment %}
<xo-sticky-hidden xo-name='sticky-addcart'></xo-sticky-hidden>
<footer {% render 'section-attr', style: pb_mobile %} class='footer-modern'>
  {% render 'section-bg-image' %}
  
  {% comment %} Main Footer Content - 3 Column Layout {% endcomment %}
  <xo-container {% render 'section-layout' %}>
    <xo-grid style='--xs: 1; --sm: 2; --lg: 3' class='footer-modern__columns'>
      
      {% comment %} Column 1 - Information {% endcomment %}
      <div class='footer-modern__column'>
        <xo-animate xo-cascade>
          <h3 class='footer-modern__heading'>{{ section.settings.info_heading | default: 'Information' }}</h3>
          {%- if section.settings.info_menu != blank -%}
            <ul role='list' class='footer-modern__list list-unstyled'>
              {%- for link in section.settings.info_menu.links -%}
                <li class='footer-modern__list-item'>
                  <a href='{{ link.url }}' class='footer-modern__link'>
                    {{ link.title | escape }}
                  </a>
                </li>
              {%- endfor -%}
            </ul>
          {%- else -%}
            <ul role='list' class='footer-modern__list list-unstyled'>
              <li class='footer-modern__list-item'>
                <a href='/pages/privacy-policy' class='footer-modern__link'>Privacy Policy</a>
              </li>
              <li class='footer-modern__list-item'>
                <a href='/pages/terms-conditions' class='footer-modern__link'>Terms & Conditions</a>
              </li>
              <li class='footer-modern__list-item'>
                <a href='/pages/return-refund-policy' class='footer-modern__link'>Return & Refund Policy</a>
              </li>
              <li class='footer-modern__list-item'>
                <a href='/pages/delivery-information' class='footer-modern__link'>Delivery Information</a>
              </li>
              <li class='footer-modern__list-item'>
                <a href='/pages/contact-us' class='footer-modern__link'>Contact Us</a>
              </li>
              <li class='footer-modern__list-item'>
                <a href='{{ section.settings.amazon_link }}' class='footer-modern__link' {% if section.settings.amazon_link != blank %}target='_blank'{% endif %}>Shop on Amazon</a>
              </li>
            </ul>
          {%- endif -%}
        </xo-animate>
      </div>

      {% comment %} Column 2 - Customer Support {% endcomment %}
      <div class='footer-modern__column'>
        <xo-animate xo-cascade>
          <h3 class='footer-modern__heading'>{{ section.settings.support_heading | default: 'Customer Support' }}</h3>
          {%- if section.settings.support_menu != blank -%}
            <ul role='list' class='footer-modern__list list-unstyled'>
              {%- for link in section.settings.support_menu.links -%}
                <li class='footer-modern__list-item'>
                  <a href='{{ link.url }}' class='footer-modern__link'>
                    {{ link.title | escape }}
                  </a>
                </li>
              {%- endfor -%}
            </ul>
          {%- else -%}
            <ul role='list' class='footer-modern__list list-unstyled'>
              <li class='footer-modern__list-item'>
                <a href='/pages/faq' class='footer-modern__link'>FAQ</a>
              </li>
              <li class='footer-modern__list-item'>
                <a href='{{ routes.account_url }}' class='footer-modern__link'>My Account</a>
              </li>
              <li class='footer-modern__list-item'>
                <a href='{{ routes.blogs_url }}' class='footer-modern__link'>Blog</a>
              </li>
              <li class='footer-modern__list-item'>
                <a href='/pages/how-to-order' class='footer-modern__link'>How to Order</a>
              </li>
              <li class='footer-modern__list-item'>
                <a href='/pages/track-order' class='footer-modern__link'>Track Order</a>
              </li>
              <li class='footer-modern__list-item'>
                <a href='{{ section.settings.payment_link }}' class='footer-modern__link' {% if section.settings.payment_link != blank %}target='_blank'{% endif %}>Payment Link</a>
              </li>
            </ul>
          {%- endif -%}
        </xo-animate>
      </div>

      {% comment %} Column 3 - Newsletter Subscription {% endcomment %}
      <div class='footer-modern__column footer-modern__column--newsletter'>
        <xo-animate xo-cascade>
        {%- if section.settings.newsletter_enable -%}
            <h3 class='footer-modern__heading'>{{ section.settings.newsletter_heading | default: 'Subscribe to our emails' }}</h3>
            {%- if section.settings.newsletter_description != blank -%}
              <p class='footer-modern__newsletter-description'>{{ section.settings.newsletter_description }}</p>
            {%- endif -%}
            {%- form 'customer', id: 'ContactFooter' -%}
              <input type='hidden' name='contact[tags]' value='newsletter'>
              <div class='footer-modern__newsletter-form'>
                {% assign value = form.email %}
                {% capture attr %}
                      aria-required='true'
                      autocorrect='off'
                      {% if form.errors %}
                        autofocus
                        aria-invalid='true'
                        aria-describedby='ContactFooter-error'
                      {% elsif form.posted_successfully? %}
                        aria-describedby='ContactFooter-success'
                      {% endif %}
                      required
                    {% endcapture %}
                <input
                  type='email'
                  name='contact[email]'
                  value='{{ value }}'
                  placeholder='{{ placeholder | default: "Email" }}'
                  class='footer-modern__newsletter-input'
                  {{ attr }}
                >
                <button
                  type='submit'
                  class='footer-modern__newsletter-button'
                  name='commit'
                  id='Subscribe'
                  aria-label='{{ "newsletter.button_label" | t }}'
                >
                  {{ section.settings.newsletter_button_text | default: 'Sign up' }}
                </button>
              </div>
              {% render 'newsletter-form-message', form: form %}
            {%- endform -%}
          {%- endif -%}
        </xo-animate>
      </div>

    </xo-grid>
  </xo-container>

  {% comment %} Bottom Section - Social Media & Payment Icons {% endcomment %}
  <div class='footer-modern__bottom'>
    <xo-container>
      <div class='footer-modern__bottom-content'>
        
        {% comment %} Social Media Icons {% endcomment %}
        {%- if section.settings.show_social -%}
          <div class='footer-modern__social'>
            {%- if section.settings.social_facebook_link != blank -%}
              <a href='{{ section.settings.social_facebook_link }}' target='_blank' class='footer-modern__social-link' aria-label='Facebook'>
                {% render 'icon', name: 'facebook2', icon_size: '20' %}
              </a>
            {%- endif -%}
            {%- if section.settings.social_instagram_link != blank -%}
              <a href='{{ section.settings.social_instagram_link }}' target='_blank' class='footer-modern__social-link' aria-label='Instagram'>
                {% render 'icon', name: 'instagram', icon_size: '20' %}
              </a>
            {%- endif -%}
            {%- if section.settings.social_youtube_link != blank -%}
              <a href='{{ section.settings.social_youtube_link }}' target='_blank' class='footer-modern__social-link' aria-label='YouTube'>
                {% render 'icon', name: 'youtube', icon_size: '20' %}
              </a>
            {%- endif -%}
            {%- if section.settings.social_twitter_link != blank -%}
              <a href='{{ section.settings.social_twitter_link }}' target='_blank' class='footer-modern__social-link' aria-label='Twitter'>
                {% render 'icon', name: 'twitter2', icon_size: '20' %}
              </a>
            {%- endif -%}
            {%- if section.settings.social_pinterest_link != blank -%}
              <a href='{{ section.settings.social_pinterest_link }}' target='_blank' class='footer-modern__social-link' aria-label='Pinterest'>
                {% render 'icon', name: 'pinterest2', icon_size: '20' %}
              </a>
            {%- endif -%}
          </div>
        {%- endif -%}

        {% comment %} Payment Method Icons {% endcomment %}
        {%- if section.settings.show_payment_icons -%}
          <div class='footer-modern__payment'>
            {%- if section.settings.payment_visa -%}
              <span class='footer-modern__payment-icon' aria-label='Visa'>Visa</span>
            {%- endif -%}
            {%- if section.settings.payment_mastercard -%}
              <span class='footer-modern__payment-icon' aria-label='Mastercard'>Mastercard</span>
            {%- endif -%}
            {%- if section.settings.payment_gpay -%}
              <span class='footer-modern__payment-icon' aria-label='Google Pay'>GPay</span>
            {%- endif -%}
            {%- if section.settings.payment_paytm -%}
              <span class='footer-modern__payment-icon' aria-label='Paytm'>Paytm</span>
            {%- endif -%}
            {%- if section.settings.payment_upi -%}
              <span class='footer-modern__payment-icon' aria-label='UPI'>UPI</span>
            {%- endif -%}
            {%- if section.settings.payment_amazon_pay -%}
              <span class='footer-modern__payment-icon' aria-label='Amazon Pay'>Amazon Pay</span>
            {%- endif -%}
            {%- if section.settings.payment_image != blank -%}
              <img
                src='{{ section.settings.payment_image | image_url: width: 400 }}'
                alt='Payment methods'
                class='footer-modern__payment-image'
                loading='lazy'
                width='400'
                height='auto'
              >
            {%- endif -%}
          </div>
        {%- endif -%}

        {% comment %} Copyright {% endcomment %}
        {%- if section.settings.copyright != blank -%}
          <div class='footer-modern__copyright'>
            {{ section.settings.copyright }}
          </div>
        {%- else -%}
          <div class='footer-modern__copyright'>
            <small>&copy; Copyright {{ 'now' | date: '%Y' }} | {{ shop.name | escape | link_to: routes.root_url }}</small>
            <small>{{ powered_by_link }}</small>
          </div>
        {%- endif -%}

      </div>
  </xo-container>
  </div>
</footer>

