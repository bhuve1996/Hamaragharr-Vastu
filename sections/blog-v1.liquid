

{% capture breakpoints %}
  {% if section.settings.columns_limit >= 4 %}
    xo-breakpoints='
    {
      1200: {
        perView: {{ section.settings.columns_limit | minus: 1}},
      },
      992: {
        perView: {{ section.settings.columns_limit | minus: 2}},
      },
      768: {
        perView: 1,
      },
      576: {
        perView: 1,
      },
    }
    '
  {% else %}
      xo-breakpoints='
    {
      768: {
        perView: 1,
      },
      576: {
        perView: 1,
      },
    }
    '
  {% endif %}
{% endcapture %}

<section {% render 'section-attr' %}>
  {% render 'section-bg-image' %}
  <xo-container {% render 'section-layout' %}>
    <xo-animate xo-cascade>
      <h2 class='blog-v2__title'>{{ section.settings.title }}</h2>
    </xo-animate>
    <xo-carousel
      xo-per-view='{{ section.settings.columns_limit }}'
      xo-gap='{{ section.settings.gap }}'
      xo-speed='400'
      {% if section.settings.auto_play %}
        xo-autoplay='5000'
      {% endif %}
      {{ breakpoints }}
      xo-render-bullet='<span></span>'
    >
      <xo-carousel-inner>
        <xo-carousel-list role='list' aria-label='{{ 'general.slider.name' | t }}'>
          {% comment %} Use blocks if available, otherwise fall back to blog articles {% endcomment %}
          {% if section.blocks.size > 0 %}
            {% for block in section.blocks %}
              {%- assign article = block.settings.article -%}
              {%- if article == blank and block.settings.article_handle != blank -%}
                {%- assign article = articles[block.settings.article_handle] -%}
              {%- endif -%}
              {%- assign placeholder_image_index = forloop.index0 | modulo: 4 | plus: 1 -%}
              {%- assign placeholder_image = 'product-apparel-' | append: placeholder_image_index -%}
              <xo-carousel-slide aria-roledescription='{{ 'sections.slideshow.slide' | t }}' aria-label='{{ forloop.index }} {{ 'general.slider.of' | t }} {{ section.blocks.size }}' {{ block.shopify_attributes }}>
                {%- if article and article != empty -%}
                  <xo-animate xo-cascade class='blog-v2__item'>
                    <a href='{{ article.url }}' class='{% render 'hover-style' %}'>
                      {%- if block.settings.custom_image != blank -%}
                        {% render 'image', image: block.settings.custom_image, media_aspect_ratio: section.settings.aspect_ratio %}
                      {%- else -%}
                        {% render 'image', image: article.image, media_aspect_ratio: section.settings.aspect_ratio %}
                      {%- endif -%}
                    </a>
                    <div class='blog-v2__date'>
                      {%- if block.settings.custom_date != blank -%}
                        {%- assign date_parts = block.settings.custom_date | split: '/' -%}
                        <span class='blog-v2__day'>{{ date_parts[0] }}</span>
                        <span class='blog-v2__month'>{{ date_parts[1] | date: '%b' }}</span>
                      {%- else -%}
                        <span class='blog-v2__day'>{{ article.published_at | date: '%d' }}</span>
                        <span class='blog-v2__month'>{{ article.published_at | date: '%b' }}</span>
                      {%- endif -%}
                    </div>
                    <a href='{{ article.url }}'>
                      <h3 class='blog-v2__item-title'>
                        {%- if block.settings.custom_title != blank -%}
                          {{ block.settings.custom_title | truncate: 50 | escape }}
                        {%- else -%}
                          {{ article.title | truncate: 50 | escape }}
                        {%- endif -%}
                      </h3>
                    </a>
                    <a href='{{ article.url }}' class='blog-v2__button'>
                      <span>{{ block.settings.button_text | default: section.settings.button_text }}</span>
                      {% render 'icon', name: 'icon-arrow', icon_size: '15' %}
                    </a>
                  </xo-animate>
                {%- else -%}
                  <xo-animate xo-cascade>
                    {% render 'article-card-placeholder', placeholder_image: placeholder_image %}
                  </xo-animate>
                {%- endif -%}
              </xo-carousel-slide>
            {% endfor %}
          {% else %}
            {% comment %} Fallback to original behavior: show articles from selected blog {% endcomment %}
            {% for article in section.settings.blog.articles limit: section.settings.articles_limit %}
              {%- assign placeholder_image_index = forloop.index0 | modulo: 4 | plus: 1 -%}
              {%- assign placeholder_image = 'product-apparel-' | append: placeholder_image_index -%}
              <xo-carousel-slide aria-roledescription='{{ 'sections.slideshow.slide' | t }}' aria-label='{{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}'>
                {%- if article and article != empty -%}
                  <xo-animate xo-cascade class='blog-v2__item'>
                    <a href='{{ article.url }}' class='{% render 'hover-style' %}'>
                      {% render 'image', image: article.image, media_aspect_ratio: section.settings.aspect_ratio %}
                    </a>
                    <div class='blog-v2__date'>
                      <span class='blog-v2__day'>{{ article.published_at | date: '%d' }}</span>
                      <span class='blog-v2__month'>{{ article.published_at | date: '%b' }}</span>
                    </div>
                    <a href='{{ article.url }}'>
                      <h3 class='blog-v2__item-title'>
                        {{ article.title | truncate: 50 | escape }}
                      </h3>
                    </a>
                    <a href='{{ article.url }}' class='blog-v2__button'>
                      <span>{{ section.settings.button_text }}</span>
                      {% render 'icon', name: 'icon-arrow', icon_size: '15' %}
                    </a>
                  </xo-animate>
                {%- else -%}
                  <xo-animate xo-cascade>
                    {% render 'article-card-placeholder', placeholder_image: placeholder_image %}
                  </xo-animate>
                {%- endif -%}
              </xo-carousel-slide>
            {% endfor %}
          {% endif %}
        </xo-carousel-list>
      </xo-carousel-inner>
      {% render 'carousel-pagination-style3', class: 'blog-v2__pagination' %}
    </xo-carousel>
  </xo-container>
    {% render 'section-separator',
    enable_separator: section.settings.enable_separator,
    separator_color: section.settings.separator_color,
    separator_height: section.settings.separator_height,
    separator_width: section.settings.separator_width,
    padding_top: section.settings.separator_padding_top,
    padding_bottom: section.settings.separator_padding_bottom
  %}
</section>

