

<div {% render 'section-attr' %}>
  {% render 'section-bg-image' %}
  <xo-container
    {% render 'section-layout' %}
  >
    <xo-grid
      style='
        --xs: 1; --lg: 3; --xo-grid-col-gap: {{ section.settings.gap }}px;
        --xo-grid-row-gap: {{ section.settings.gap }}px
      '
      class='banner-v213'
    >
      <xo-animate xo-cascade class='banner-v213__item'>
        <a class='{% render 'hover-style' %} banner-v213__img' href='{{ section.settings.link1 }}'>
          {% render 'image', image: section.settings.image1 %}
        </a>
        <div class='banner-v213__content'>
          <div class='banner-v213__subtitle'>{{ section.settings.subtitle1 }}</div>
          <h3 class='banner-v213__title'>{{ section.settings.title1 }}</h3>
          {% render 'button',
            text: section.settings.button1_text,
            link: section.settings.link1,
            mode: section.settings.button1_mode,
            style: section.settings.button1_style,
            size: section.settings.button1_size,
            radius: section.settings.button1_radius,
            padding: section.settings.button1_padding
          %}
        </div>
      </xo-animate>
      <xo-animate xo-cascade class='banner-v213__item'>
        <a class='{% render 'hover-style' %} banner-v213__img' href='{{ section.settings.link2 }}'>
          {% render 'image', image: section.settings.image2 %}
        </a>
        <div class='banner-v213__content'>
          <div class='banner-v213__subtitle'>{{ section.settings.subtitle2 }}</div>
          <h3 class='banner-v213__title'>{{ section.settings.title2 }}</h3>
          {% render 'button',
            text: section.settings.button2_text,
            link: section.settings.link2,
            mode: section.settings.button2_mode,
            style: section.settings.button2_style,
            size: section.settings.button2_size,
            radius: section.settings.button2_radius,
            padding: section.settings.button2_padding
          %}
        </div>
      </xo-animate>
      <xo-animate xo-cascade class='banner-v213__item'>
        <a class='{% render 'hover-style' %} banner-v213__img' href='{{ section.settings.link3 }}'>
          {% render 'image', image: section.settings.image3 %}
        </a>
        <div class='banner-v213__content'>
          <div class='banner-v213__subtitle'>{{ section.settings.subtitle3 }}</div>
