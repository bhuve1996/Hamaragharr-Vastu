

<div {% render 'section-attr' %}>
  {% render 'section-bg-image' %}
  <xo-container {% render 'section-layout' %}>
    <xo-grid style='--xs: 1; --md: 2; --xl: 2; --xo-grid-col-gap: {{ section.settings.gap }}px;  --xo-grid-row-gap: {{ section.settings.gap }}px;'>
      <div
        class='banner144__left'
        {% if section.settings.reverse == true %}
          style='--order-xs: 1'
        {% endif %}
      >
        <div class='banner144-item'>
          <div class='banner144-content'>
            <p class='banner144-sub_title'>{{ section.settings.subtitle }}</p>
            <h3 class='banner144-title'>
              {{ section.settings.title }}
            </h3>
            {% render 'button',
              text: section.settings.button_text,
              link: section.settings.button_link,
              mode: section.settings.button_mode,
              style: section.settings.button_style,
              size: section.settings.button_size,
              radius: section.settings.button_radius,
              padding: section.settings.button_padding
            %}
          </div>
        </div>
      </div>
      <div class='banner144__rigth'>
        <div class='banner144-img {% render 'hover-style' %}'>
          <a href='{{ section.settings.button_link }}'>
            {% render 'image', image: section.settings.image %}
          </a>
          <h4 class='banner144__content1'>{{ section.settings.description }}</h4>
        </div>
      </div>
    </xo-grid>
    <div class='banner144-label_banner'>
      <span>{{ section.settings.banner_label }}</span>
    </div>
  </xo-container>
</div>

